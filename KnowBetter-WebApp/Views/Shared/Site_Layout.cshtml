<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @RenderSection("Scripts", false)
    @RenderSection("CompareProductSelectStyle", false)
    @RenderSection("CompareProductResultsStyle", false)
    @RenderSection("DetailsStyle", false)
    @RenderSection("addFavAvoidStyles", false)
    @RenderSection("loginSignupStyler", false)
    @RenderSection("AboutStyle", false)

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/Site_StyleSheet.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Readex+Pro">


</head>
<body>
    <div class="siteBackground">
        </div>    
  
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#"><img src="~/images/KnowBetter_logo_navbar.png" height="45" /></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a asp-action="Dashboard" asp-controller="Home" style="color: white; font-family:Readex Pro;margin-top:2px;">Home</a></li>
                    <li><a href="@Url.Action("About","Home")" style="color:white;font-family:Readex Pro;margin-top:2px;">About</a></li>
                    <li><a href="@Url.Action("CompareProductSelect","Products")" style="color:white;font-family:Readex Pro;margin-top:2px;">Product LookUp</a></li>
                    <li><a href="@Url.Action("Index","ContactForm")" style="color:white;font-family:Readex Pro;margin-top:2px;">Contact Us</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="content" class="container-fluid text-center">
        <div class="col-sm-12 text-center">
            <article>
                @RenderBody()
            </article>
        </div>
    </div>
  
</body>
</html>


