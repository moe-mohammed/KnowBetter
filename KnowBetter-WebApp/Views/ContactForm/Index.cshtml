@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Index_Layout.cshtml";
}
@section IndexStyle{
    <link rel="Stylesheet" href="~/css/Index_StyleSheet.css" />
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model KnowBetter_WebApp.Models.ContactForm


<div class="Ibackground">

</div>
<div class="SIbackground">

</div>


<div class="container">

    <div class="row align-items-center">
        <div class="col">
            <h1 style="font-size:8em">
                <img src="~/images/KnowBetter_logo2_landingpage.png" />
            </h1>
            <h3>
                Contact Us
            </h3>
            <form asp-action="Index" asp-controller="ContactForm" method="post">
                <div>
                    <label asp-for="Name">Please enter your name:</label>
                    <input type="text" asp-for="Name" />
                </div>
                <div>
                    <label asp-for="Email">Please enter your email:</label>
                    <input type="text" asp-for="Email" />
                </div>
                <div>
                    <label asp-for="Message">Please enter your message:</label>
                    <textarea asp-for="Message"></textarea>
                </div>
                <input type="submit" value="Send Message!" />
            </form>


        </div>


    </div>
</div>

